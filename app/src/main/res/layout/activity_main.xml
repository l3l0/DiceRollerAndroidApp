<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/roll_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/rollButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:textColor="#1DE9B6"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="74dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp" app:srcCompat="@drawable/dice_1" android:id="@+id/diceView"
            app:layout_constraintTop_toBottomOf="@+id/rollButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>